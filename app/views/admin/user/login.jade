extends layout

block content
    
    .container
        .wrapper
            form.form-signin(method="post",action="/admin/users/login")
                != messages()
                h3.form-signin-heading Welcome! 请登录

                hr.colorgraph
                br
                input.email.form-control(type='text', name='email', placeholder='Email', required='true')
                br
                input.password.form-control(type='password', name='password', placeholder='Password', required='true')

                button.btn.btn-lg.btn-info.btn-block(type='submit') 登录
                a.btn.btn-lg.btn-danger.btn-block(href="/admin/users/register") 注册
