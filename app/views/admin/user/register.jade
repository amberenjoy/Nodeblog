extends layout

block content
    
    .container
        .wrapper
            form.form-signin(method="post",action="/admin/users/register")
                h3.form-signin-heading Welcome! 请注册
                hr.colorgraph
                br
                input.email.form-control(type='text', name='email', placeholder='Email', required='true')
                br
                input.password.form-control(type='password', name='password', placeholder='Password', required='true')
                
                input.confirm-password.form-control(type='password', name='confirmPassword', placeholder='Confirm Password', required='true')

                button.btn.btn-lg.btn-primary.btn-block(type='submit') 注册

